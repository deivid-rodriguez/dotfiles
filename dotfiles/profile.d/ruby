#!/bin/bash

#
# Enable chruby
#
source /usr/local/share/chruby/chruby.sh

#
# Select default Ruby
#
source /usr/local/share/chruby/auto.sh

#
# JRUBY_OPTS to make jruby startup time acceptable
#

if [[ $JRUBY_OPTS != *--dev* ]]
then
  export JRUBY_OPTS="$JRUBY_OPTS --dev"
fi

if [[ $JRUBY_OPTS != *--debug* ]]
then
  export JRUBY_OPTS="$JRUBY_OPTS --debug"
fi
