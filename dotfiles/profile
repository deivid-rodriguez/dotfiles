# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login exists.

# The default umask is set in /etc/profile; for setting the umask for ssh
# logins, install and configure the libpam-umask package.
#umask 022

#
# Set default editor
#
export EDITOR=vim

#
# if running bash
#
if [ -n "$BASH_VERSION" ]; then
  # include .bashrc if it exists
  if [ -f "$HOME/.bashrc" ]; then
    . "$HOME/.bashrc"
  fi
fi

#
# Environment variables needed for Linuxbrew
#
export PATH="$HOME/.linuxbrew/bin:$PATH"
export MANPATH="$HOME/.linuxbrew/share/man:$MANPATH"
export INFOPATH="$HOME/.linuxbrew/share/info:$INFOPATH"

#
# Alias hub to git
#
eval "$(hub alias -s)"

#
# Enable chruby
#
source $HOME/.linuxbrew/opt/chruby/share/chruby/chruby.sh

#
# Select default Ruby
#
chruby 2.2

#
# Custom completion
#
source "$HOME/.completion.d/bundler"

#
# Fancy prompt
#
if [ -f "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh" ]; then
  GIT_PROMPT_THEME=Custom
  source "$(brew --prefix)/opt/bash-git-prompt/share/gitprompt.sh"
fi
