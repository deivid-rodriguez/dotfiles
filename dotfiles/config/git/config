[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  ls = log --pretty=format:'%Cgreen%h %C(yellow)[%ar]%Cred%d %Creset%s %Cblue[%cn]'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
  edit = !". ~/.config/git/aliases && git_edit"

[commit]
  cleanup = scissors

[content]
  editor = nvim -w

[core]
  editor = nvim
  autocrlf = input
  quotepath = off
  pager = less -R

[fetch]
  prune = true

[hub]
  protocol = ssh

[push]
  default = simple

