[alias]
  co = checkout
  ci = commit
  st = status
  br = branch
  ls = log --pretty=format:'%Cgreen%h %C(yellow)[%ar]%Cred%d %Creset%s %Cblue[%cn]'
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  type = cat-file -t
  dump = cat-file -p
  edit = !"bash -c 'source ~/.config/git/edit && git_edit $1'" --
  range = !"bash -c 'source ~/.config/git/range && git_range'"
  review = !"bash -c 'source ~/.config/git/review && git_review'"

[credential]
  helper = cache --timeout=86400

[commit]
  cleanup = scissors

[content]
  editor = nvim -w

[core]
  editor = nvim
  autocrlf = input
  quotepath = off
  pager = less -R

[fetch]
  prune = true

[hub]
  protocol = https

[merge "bundler"]
  name = Resolve Gemfile.lock conflicts by running `bundle lock`
  driver = bundle lock

[pull]
  rebase = true

[push]
  default = simple

